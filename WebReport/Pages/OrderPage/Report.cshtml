<div class="container row p-0 m-0">
    <form method="post">
        <div class="form-row align-items-end">
            <div class="form-group col-8">
                <div class="form-row">
                    <div class="col-5">
                        <label for="example-time-input" class="control-label">from</label>
                        <input class="form-control" type="date" asp-for="ReportDateFrom">
                    </div>
                    <div class="col-5 ml-3">
                        <label for="example-time-input" class="control-label">to</label>
                        <input class="form-control" type="date" asp-for="ReportDateTo">
                    </div>
                </div>
            </div>
            @*<div class="form-group col">
            <input type="submit" value="Apply" class="btn btn-success btn-sm form-control" />
        </div>*@
            <div class="form-group col">
                <input type="submit" value="Export to excel" class="btn btn-dark btn-sm form-control" />
            </div>
        </div>
    </form>
    <form method="post">
    </form>
    <div class="col-12 border mt-3 p-3">
        @if (Model.ReportClasses.Any())
        {
            <table class="table table-striped table-bordered border">
                <tr class="table-secondary thead-dark">
                    <th>
                        <label asp-for="@Model.ReportClasses.FirstOrDefault().OrdersDate"></label>
                    </th>
                    <th>
                        <label asp-for="@Model.ReportClasses.FirstOrDefault().LowAmountCount"></label>
                    </th>
                    <th>
                        <label asp-for="@Model.ReportClasses.FirstOrDefault().AverageAmountCount"></label>
                    </th>
                    <th>
                        <label asp-for="@Model.ReportClasses.FirstOrDefault().HighAmountCount"></label>
                    </th>
                </tr>
                @foreach (var item in Model.ReportClasses)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.OrdersDate)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.LowAmountCount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.AverageAmountCount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.HighAmountCount)
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No report available</p>
        }
    </div>
</div>