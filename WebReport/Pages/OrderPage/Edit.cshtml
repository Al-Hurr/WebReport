@page
@model WebReport.Pages.OrderPage.EditModel
@{
}

<br />
<h2 class="text-info">Edit order</h2>
<br />

<div class="border container">
    <form method="post">
        <input asp-for="Order.Id" hidden />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Order.Amount"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Order.Amount" />
            </div>
            <span asp-validation-for="Order.Amount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Order.OrderDate"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Order.OrderDate" />
            </div>
            <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Edit" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>