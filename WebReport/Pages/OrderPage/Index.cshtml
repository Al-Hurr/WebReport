@page
@model WebReport.Pages.OrderPage.IndexModel
@{
}

<br />

<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info text-black-50">Orders List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="/OrderPage/Report">Show reports</a>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-page="/OrderPage/Create">Add new order</a>
    </div>
    <div class="col-12 border mt-3 p-3">
        <form method="post">
            @if (Model.Orders.Any())
            {
                <table class="table table-striped table-bordered border">
                    <tr class="table-secondary thead-dark">
                        <th>
                            <label asp-for="@Model.Orders.FirstOrDefault().Amount"></label>
                        </th>
                        <th>
                            <label asp-for="@Model.Orders.FirstOrDefault().OrderDate"></label>
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.OrderDate)
                            </td>
                            <td style="text-align:center;">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm w-25">Edit</a>
                                <button onclick="return confirm('Are you sure you want to delete?')" asp-route-id="@item.Id" asp-page-handler="Delete" class="btn btn-danger btn-sm w-25">Delete</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No order available</p>
            }
        </form>
    </div>
</div>